<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
	<changeSet author="runa" id="01">
		<createTable tableName="book">
			<column name="id" type="bigint" autoIncrement="true">
				<constraints nullable="false" unique="true"
					primaryKey="true" />
			</column>
			<column name="isbn" type="varchar(13)">
				<constraints nullable="false" />
			</column>
			<column name="quantity" type="int(10)">
				<constraints nullable="false" />
			</column>
			<column name="rating" type="double">
			</column>
			<column name="department"
				type="ENUM('QA', 'BA', 'HR', 'SALES', 'IOS', 'ANDROID', 'CLOUD', 'RIA', 'MWA', 'JED', 'DESIGN')">
				<constraints nullable="false" />
			</column>
			<column name="is_occupied" type="tinyint(2)">
				<constraints nullable="false" />
			</column>
			<column name="book_details_id" type="bigint">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>
	<changeSet author="runa" id="02">
		<createTable tableName="book_details">
			<column name="id" type="bigint" autoIncrement="true">
				<constraints nullable="false" unique="true"
					primaryKey="true" />
			</column>
			<column name="book_id" type="bigint">
				<constraints nullable="false" />
			</column>
			<column name="name" type="varchar(50)">
				<constraints nullable="false" />
			</column>
			<column name="author" type="varchar(50)">
				<constraints nullable="false" />
			</column>
			<column name="discription" type="varchar(200)">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>
	<changeSet author="runa" id="03">
		<createTable tableName="feedback">
			<column name="id" type="bigint" autoIncrement="true">
				<constraints nullable="false" unique="true"
					primaryKey="true" />
			</column>
			<column name="book_id" type="bigint">
				<constraints nullable="false" />
			</column>
			<column name="user_id" type="bigint">
				<constraints nullable="false" />
			</column>
			<column name="rating"
				type="ENUM('ONE', 'TWO', 'THREE', 'FOUR', 'FIVE')">
				<constraints nullable="false" />
			</column>
			<column name="user_name" type="varchar(50)">
				<constraints nullable="false" />
			</column>
			<column name="comment" type="varchar(200)">
			</column>
		</createTable>
	</changeSet>
	<changeSet author="runa" id="04">
		<createTable tableName="notification">
			<column name="id" type="bigint" autoIncrement="true">
				<constraints nullable="false" unique="true"
					primaryKey="true" />
			</column>
			<column name="notification_message" type="varchar(200)">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>
	<changeSet author="runa" id="05">
		<createTable tableName="order">
			<column name="id" type="bigint" autoIncrement="true">
				<constraints nullable="false" unique="true"
					primaryKey="true" />
			</column>
			<column name="user_id" type="bigint">
				<constraints nullable="false" />
			</column>
			<column name="book_id" type="bigint">
				<constraints nullable="false" />
			</column>
			<column name="notification_id" type="bigint">
				<constraints nullable="false" />
			</column>
			<column name="order_date" type="date">
				<constraints nullable="false" />
			</column>
			<column name="due_date" type="date">
				<constraints nullable="false" />
			</column>
			<column name="is_finished" type="tinyint(2)">
				<constraints nullable="false" />
			</column>
			<column name="probigintation" type="tinyint(2)">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>
	<changeSet author="runa" id="06">
		<createTable tableName="role">
			<column name="id" type="bigint" autoIncrement="true">
				<constraints nullable="false" unique="true"
					primaryKey="true" />
			</column>
			<column name="name" type="varchar(20)">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>
	<changeSet author="runa" id="07">
		<createTable tableName="user">
			<column name="id" type="bigint" autoIncrement="true">
				<constraints nullable="false" unique="true"
					primaryKey="true" />
			</column>
			<column name="email" type="varchar(50)">
				<constraints nullable="false" />
			</column>
			<column name="password" type="varchar(20)">
				<constraints nullable="false" />
			</column>
			<column name="name" type="varchar(20)">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>
	<changeSet author="runa" id="08">
		<createTable tableName="user_role">
			<column name="user_id" type="bigint">
				<constraints nullable="false" unique="true"
					primaryKey="true" />
			</column>
			<column name="role_id" type="bigint">
				<constraints nullable="false" unique="true"
					primaryKey="true" />
			</column>
		</createTable>
	</changeSet>
	<changeSet author="runa" id="09">
		<addForeignKeyConstraint
			constraintName="fk_user2order" referencedTableName="user"
			referencedColumnNames="id" baseColumnNames="user_id"
			baseTableName="order" />
		<addForeignKeyConstraint
			constraintName="fk_book2order" referencedTableName="book"
			referencedColumnNames="id" baseColumnNames="book_id"
			baseTableName="order" />
		<addForeignKeyConstraint
			constraintName="fk_user2feedback" referencedTableName="user"
			referencedColumnNames="id" baseColumnNames="user_id"
			baseTableName="feedback" />
		<addForeignKeyConstraint
			constraintName="fk_notification2order"
			referencedTableName="notification" referencedColumnNames="id"
			baseColumnNames="notification_id" baseTableName="order" />
		<addForeignKeyConstraint
			constraintName="fk_book2feedback" referencedTableName="book"
			referencedColumnNames="id" baseColumnNames="book_id"
			baseTableName="feedback" />
		<addForeignKeyConstraint
			constraintName="fk_book2book_details" referencedTableName="book"
			referencedColumnNames="id" baseColumnNames="book_id"
			baseTableName="book_details" />
		<addForeignKeyConstraint
			constraintName="fk_book_details2book"
			referencedTableName="book_details" referencedColumnNames="id"
			baseColumnNames="book_details_id" baseTableName="book" />
		<addForeignKeyConstraint
			constraintName="fk_user2user_role" referencedTableName="user"
			referencedColumnNames="id" baseColumnNames="user_id"
			baseTableName="user_role" />
		<addForeignKeyConstraint
			constraintName="fk_role2user_role" referencedTableName="role"
			referencedColumnNames="id" baseColumnNames="role_id"
			baseTableName="user_role" />
	</changeSet>
</databaseChangeLog>